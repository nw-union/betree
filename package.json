{
  "name": "betree",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "db:generate": "drizzle-kit generate --config ./adapter/drizzle/drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply --local DB",
    "db:migrate:development": "wrangler d1 migrations apply --env development --remote DB",
    "db:migrate:production": "wrangler d1 migrations apply --env production --remote DB",
    "db:sampledata:local": "wrangler d1 execute weeklycontents-local --file ./adapter/drizzle/sampledata/data.sql --local",
    "dev": "react-router dev",
    "start": "wrangler dev",
    "deploy:development": "wrangler deploy --env development",
    "deploy:production": "wrangler deploy --env production",
    "fmt": "biome format --write .",
    "lint": "biome lint --write .",
    "typecheck": "wrangler types && react-router typegen && tsc -b",
    "check": "bun run fmt && bun run lint",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@mjackson/form-data-parser": "^0.9.1",
    "@react-router/cloudflare": "^7.9.0",
    "drizzle-orm": "~0.44.5",
    "isbot": "^5.1.30",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-router": "^7.9.0",
    "react-textarea-autosize": "^8.5.9",
    "react-twitter-widgets": "^1.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@react-router/dev": "^7.9.0",
    "@react-router/fs-routes": "^7.9.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.2.21",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "~0.31.4",
    "neverthrow": "^8.2.0",
    "tailwindcss": "^4.1.13",
    "ts-pattern": "^5.8.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.36.0",
    "zod": "^4.1.8"
  }
}
